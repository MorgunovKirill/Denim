include ../base/mixins

block data
block variables

block variables
  - var title = "Denim - главная"
  - var wrapperMod = ""
  - var hasHeader = false
  - var headerMod = ""
  - var hasFooter = false
  - var footerMod = ""
  - var currentPage = ""

doctype html
html(lang="ru")
  head
    title= title
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    meta(name="description", content="Мёд - оптом и в розницу")

    link(rel="apple-touch-icon" sizes="180x180" href="favicon/apple-touch-icon.png")
    link(rel="icon" type="image/png" sizes="32x32" href="favicon/favicon-32x32.png")
    link(rel="icon" type="image/png" sizes="16x16" href="favicon/favicon-16x16.png")   
    link(rel="mask-icon" href="favicon/safari-pinned-tab.svg" color="#ffcf55")
    meta(name="msapplication-TileColor" content="#ffcf55")
    meta(name="theme-color" content="#ffffff")

    link(rel="stylesheet", href="css/style.min.css")

  body
    +sprite()  
    header.header.container      
      h2.header__title
        span Nîmes
    main 
      section.intro 
        .container
          nav.intro__navigation
            ul.intro__list 
              li.intro__item 
                a.intro__link(href="#") Woman
              li.intro__item 
                a.intro__link(href="#") Man
              li.intro__item 
                a.intro__link(href="#") New
            ul.intro__list 
              li.intro__item 
                a.intro__link(href="#")
                  +icon("icon-cart", 22, 20)
              li.intro__item 
                a.intro__link(href="#") 
                  +icon("icon-magnifier", 20, 20)
          .intro__main 
            .intro__intro 
              p.intro__text The quality you deserve
              h1.intro__title DENIM
              a.btn.intro__btn Check new collection
            .intro__img
              img(src="img/intro.jpg" width="430" height="517" alt="фотография девушки в одежде бренда")     
          nav.intro__navigation
            ul.intro__list 
              li.intro__item 
                a.intro__link(href="#")
                  +icon("icon-arrowdown", 12, 29)         
            ul.intro__list 
              li.intro__item 
                a.intro__link(href="#") Facebook
              li.intro__item 
                a.intro__link(href="#") Instagram
      section.bestsellers.container
        .bestsellers__header
          h2.bestsellers__title Bestsellers
          a.bestsellers__all(href="#") View all
        ul.bestsellers__list 
          li.bestsellers__item 
            a.bestsellers__link(href="#")
              .bestsellers__img
                img(src="img/jacket.jpg" width="270" height="349" alt="фотография девушки в одежде бренда")     
              h3.bestsellers__heading Jacket 
              p.bestsellers__price $ 120
          li.bestsellers__item 
            a.bestsellers__link(href="#")
              .bestsellers__img
                img(src="img/overalls.jpg" width="270" height="349" alt="фотография девушки в одежде бренда")     
              h3.bestsellers__heading Overalls 
              p.bestsellers__price $ 120
          li.bestsellers__item 
            a.bestsellers__link(href="#")
              .bestsellers__img
                img(src="img/jacket2.jpg" width="270" height="349" alt="фотография девушки в одежде бренда")    
              h3.bestsellers__heading Jacket 
              p.bestsellers__price $ 120
          li.bestsellers__item 
            a.bestsellers__link(href="#")
              .bestsellers__img
                img(src="img/overalls2.jpg" width="270" height="349" alt="фотография девушки в одежде бренда")    
              h3.bestsellers__heading Overalls 
              p.bestsellers__price $ 120


    block modals

    script(src="js/vendor.min.js")
    script(src="js/main.min.js")
      