include ../base/mixins

block data
block variables

block variables
  - var title = "Denim - главная"
  - var wrapperMod = ""
  - var hasHeader = false
  - var headerMod = ""
  - var hasFooter = false
  - var footerMod = ""
  - var currentPage = ""

doctype html
html(lang="ru")
  head
    title= title
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    meta(name="description", content="Мёд - оптом и в розницу")

    link(rel="apple-touch-icon" sizes="180x180" href="favicon/apple-touch-icon.png")
    link(rel="icon" type="image/png" sizes="32x32" href="favicon/favicon-32x32.png")
    link(rel="icon" type="image/png" sizes="16x16" href="favicon/favicon-16x16.png")   
    link(rel="mask-icon" href="favicon/safari-pinned-tab.svg" color="#ffcf55")
    meta(name="msapplication-TileColor" content="#ffcf55")
    meta(name="theme-color" content="#ffffff")

    link(rel="stylesheet", href="css/style.min.css")

  body
    +sprite()  
    header.header.container   
      ul.header-navigation.header-navigation--site 
        li.header-navigation__item 
          a.header-navigation__link(href="#") Woman   
        li.header-navigation__item 
          a.header-navigation__link(href="#") Man   
        li.header-navigation__item 
          a.header-navigation__link(href="#") New   
      h2.header__title
        a(href="index.html") Nîmes
      ul.header-navigation.header-navigation--user
         li.header-navigation__item 
          a.header-navigation__link(href="#" aria-label="искать по сайту")
            +icon("icon-magnifier", 20, 20)            
         li.header-navigation__item 
          a.header-navigation__link(href="#" aria-label="корзина покупок")
            +icon("icon-cart", 22, 20)             
    main
      section.product 
        .container 
          .gallery 
            .gallery__gallery
              .gallery__main-image
                img(src="img/gallery-1.jpg" width="400" height="523" alt="фотография девушки в одежде бренда")     
              .gallery__list
                .gallery__item 
                  a(href="#").gallery__image 
                     img(src="img/gallery-2.jpg" width="85" height="113" alt="фотография девушки в одежде бренда")     
                .gallery__item 
                  a(href="#").gallery__image 
                     img(src="img/gallery-3.jpg" width="85" height="113" alt="фотография девушки в одежде бренда")     
                .gallery__item 
                  a(href="#").gallery__image 
                     img(src="img/gallery-4.jpg" width="85" height="113" alt="фотография девушки в одежде бренда")     
                .gallery__item 
                  a(href="#").gallery__image 
                     img(src="img/gallery-5.jpg" width="85" height="113" alt="фотография девушки в одежде бренда")                
          .details
            h1.details__title Overalls 
            p.details__description Overalls in washed organic cotton denim. Collar, button fly, and adjustable belt at waist. Chest pockets with flap. Long, gently flared sleeves and straight legs with front pockets and back pockets.
            form(action="#" type="GET")              
              fieldset.details__color
                legend.details__heading Color  
                input(type="radio" name="color" value="lightgray" id="lightgray")
                label(for="lightgray")
                input(type="radio" name="color" value="blue" id="blue")
                label(for="blue")
                input(type="radio" name="color" value="gray" id="gray")
                label(for="gray")             
              fieldset.details__size
                legend.details__heading Size 
                input(type="radio" name="size" value="XS" id="XS")
                label(for="XS") XS
                input(type="radio" name="size" value="S" id="S")
                label(for="S") S
                input(type="radio" name="size" value="M" id="M")
                label(for="M") M
                input(type="radio" name="size" value="L" id="L")
                label(for="L") L
                input(type="radio" name="size" value="XL" id="XL")
                label(for="XL") XL
              h2.details__heading $ 160
              .details__btn.btn Add to cart 
      section.bestsellers.container
        .bestsellers__header
          h2.bestsellers__title You may also like
          a.bestsellers__all(href="#") View all
        ul.bestsellers__list           
          li.bestsellers__item 
            a.card(href="#")
              .card__img
                img(src="img/overalls.jpg" width="270" height="349" alt="фотография девушки в одежде бренда")     
              h3.card__heading Overalls 
              p.card__price $ 120
          li.bestsellers__item 
            a.card(href="#")
              .card__img
                img(src="img/jacket.jpg" width="270" height="349" alt="фотография девушки в одежде бренда")     
              h3.card__heading Jacket 
              p.card__price $ 120
          li.bestsellers__item 
            a.card(href="#")
              .card__img
                img(src="img/jacket2.jpg" width="270" height="349" alt="фотография девушки в одежде бренда")    
              h3.card__heading Jacket 
              p.card__price $ 120
          li.bestsellers__item 
            a.card(href="#")
              .card__img
                img(src="img/overalls2.jpg" width="270" height="349" alt="фотография девушки в одежде бренда")    
              h3.card__heading Overalls 
              p.card__price $ 120
    footer.footer
      .container
        h2.footer__title
          span Nîmes
        ul.site-navigation 
          li.site-navigation__item
            a.site-navigation__link(href="#") Shop
          li.site-navigation__item
            a.site-navigation__link(href="#") Delivery
          li.site-navigation__item
            a.site-navigation__link(href="#") Service
          li.site-navigation__item
            a.site-navigation__link(href="#") Sitemap
          li.site-navigation__item
            a.site-navigation__link(href="#") Contacts
        ul.socials 
          li.socials__item
            a.socials__link(href="#" aria-label="ссылка на facebook")
              +icon("icon-facebook", 12, 20)
          li.socials__item
            a.socials__link(href="#" aria-label="ссылка на instagram")
              +icon("icon-instagram", 20, 20)
          li.socials__item
            a.socials__link(href="#" aria-label="ссылка на parler")
              +icon("icon-parler", 21, 21)
          li.socials__item
            a.socials__link(href="#" aria-label="ссылка на twitter")
              +icon("icon-twitter", 22, 18)

    block modals

    script(src="js/vendor.min.js")
    script(src="js/main.min.js")
      